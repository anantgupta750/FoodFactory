<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#919191"
    tools:context=".ui.PhoneAuth">


    <View
        android:id="@+id/rectangle_3"
        android:layout_width="417dp"
        android:layout_height="335dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_3"
        android:elevation="30dp"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:id="@+id/group_3"
        android:layout_width="144dp"
        android:layout_height="162.38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:text="@string/login"
        android:textAppearance="@style/login"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="307dp" />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="134dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:text="@string/sign_up"
        android:textAppearance="@style/sign_up"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="306dp" />

    <View
        android:id="@+id/group_1"
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/phone_numbe"
        android:layout_width="178dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.4"
        android:gravity="top"
        android:text="@string/phone_numbe"
        android:textAppearance="@style/phone_numbe"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="386dp" />

    <EditText
        android:id="@+id/numb"
        android:layout_width="315dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:hint="Enter your Contact number"
        android:inputType="phone"
        android:textAppearance="@style/xxxxx75"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="419dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get OTP"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="498dp" />


</androidx.constraintlayout.widget.ConstraintLayout>