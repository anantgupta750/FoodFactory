<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_phone">

    <fragment
        android:id="@+id/nav_menu"
        android:name="com.example.foodfactory.ui.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_subMenuFragment"
            app:destination="@id/subMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/subMenuFragment"
        android:name="com.example.foodfactory.ui.SubMenuFragment"
        android:label="SubMenuFragment" >
        <action
            android:id="@+id/action_subMenuFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_phone"
        android:name="com.example.foodfactory.ui.PhoneAuth"
        android:label="fragment_phone_auth"
        tools:layout="@layout/fragment_phone_auth" >
        <action
            android:id="@+id/action_nav_phone_to_otpFragment"
            app:destination="@id/otpFragment" />
    </fragment>
    <fragment
        android:id="@+id/otpFragment"
        android:name="com.example.foodfactory.OtpFragment"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp" >
        <action
            android:id="@+id/action_otpFragment_to_nav_menu"
            app:destination="@id/nav_menu" />
    </fragment>
    <fragment
        android:id="@+id/qrFragment"
        android:name="com.example.foodfactory.QrFragment"
        android:label="fragment_qr"
        tools:layout="@layout/fragment_qr" >
        <action
            android:id="@+id/action_qrFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.foodfactory.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_qrFragment"
            app:destination="@id/qrFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.foodfactory.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/statusFragment"
        android:name="com.example.foodfactory.StatusFragment"
        android:label="fragment_status"
        tools:layout="@layout/fragment_status" />

</navigation>